<%= form_for([:dashboard, user]) do |f| %>
  
  <div class="field">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: 'form-control', required: 'required',
    placeholder: 'Digite o nome', autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label :email, 'E-mail' %>
    <%= f.email_field :email, class: 'form-control', required:' required',
    placeholder: 'Digite o e-mail', autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha' %>
    <%= f.password_field :password, class: 'form-control', required: 'required',
    placeholder: 'Digite a senha', autocomplete: 'off' %>
  </div> 

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmar Senha' %>
    <%= f.password_field :password_confirmation, class: 'form-control', required: 'required',
    placeholder: 'Confirme a senha', autocomplete: 'off' %>
  </div>

  <div class="field"><br />
    <%= f.submit nil, class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>